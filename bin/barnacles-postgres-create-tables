#!/usr/bin/env node

const os = require('os');
const exec = require('child_process').exec;

// User = reelyactive, Database = pareto_anywhere, Host = 127.0.0.1
const LINUX_CMD = "psql -U reelyactive -h 127.0.0.1 -d pareto_anywhere -c ";
const CREATE_RADDEC = "'CREATE TABLE raddec (_storeid bigint GENERATED ALWAYS AS IDENTITY, transmittersignature varchar(36) NOT NULL, timestamp timestamptz DEFAULT current_timestamp, raddec JSONB NOT NULL);'";
const CREATE_DYNAMB = "'CREATE TABLE dynamb (_storeid bigint GENERATED ALWAYS AS IDENTITY, devicesignature varchar(36) NOT NULL, timestamp timestamptz DEFAULT current_timestamp, dynamb JSONB NOT NULL);'";
const CREATE_SPATEM = "'CREATE TABLE spatem (_storeid bigint GENERATED ALWAYS AS IDENTITY, devicesignature varchar(36) NOT NULL, timestamp timestamptz DEFAULT current_timestamp, spatem JSONB NOT NULL);'";

// Linux
if(os.platform() === 'linux') {
  console.log('When prompted, each time, enter the password for the reelyactive user.');
  exec(LINUX_CMD + CREATE_RADDEC, (err) => {
    if(err) { return console.log(err.message); }
    else {
      console.log('Created raddec table');
      exec(LINUX_CMD + CREATE_DYNAMB, (err) => {
        if(err) { return console.log(err.message); }
        else {
          console.log('Created dynamb table');
          exec(LINUX_CMD + CREATE_SPATEM, (err) => {
            if(err) { return console.log(err.message); }
            else {
              console.log('Created spatem table');
              return console.log('All database tables created successfully');
            }
          });
        }
      });
    }
  });
}

// Unsupported OS
else {
  return console.log('This script currently supports Linux only.');
}